# Telegram Bot Configuration
# Получите токен от @BotFather в Telegram
BOT_TOKEN=your_bot_token_here

# Database Configuration
# Production: PostgreSQL на Railway или другом хостинге
# Development: SQLite для локальной разработки
DATABASE_URL=postgres://user:password@localhost:5432/telegram_bot
# Для SQLite (development):
# DATABASE_URL=sqlite://telegram_bot.db

# Database Pool Settings
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_AUTO_MIGRATE=true

# Application Settings
APP_NAME=telegram-multitool-bot
ENVIRONMENT=development  # development, production

# Logging
LOG_LEVEL=info  # trace, debug, info, warn, error
LOG_FORMAT=pretty  # pretty, json
RUST_LOG=info

# Server Configuration (опционально, для webhook режима)
# PORT=8080

# File Storage (для конвертера файлов)
TEMP_DIR=./tmp
OUTPUT_DIR=./converted
MAX_FILE_SIZE=20971520  # 20 MB в байтах

# Bot Settings
MAX_HANDLERS=100
